@using ModelDto;
@{
    ViewBag.Title = "Contactos";
}
@model ModelDto.Ctrl_ContactoDto
<h2>Contactos</h2>

<script src="~/Scripts/Admin/Contacto.js"></script>
<script type="text/javascript">
    var BuscarContacto = "@Url.Action("BuscarContacto", "Admin")";
    var DetalleContacto = "@Url.Action("DetalleContacto", "Admin")";
    var modelJson = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
</script>

<div class="content-heading">
    <div>
        Usa el siguiente formulario para mostrar los <b>Contactos</b> registrados en la aplicaci&oacute;n.
    </div>

</div>

<div class="card card-default" style="border-color: #aaaaaa; border-width: 1px; border-style: solid; margin:1%">
    <div class="card-header">
    </div>
    <div class="card-body">
        <form id="formBuscadorContacto">
            <div class="form-group">
                <div class="col-md-4 col-sm-4 form-group">
                    <label for="Nombre" class="control-label font-weight-bold">Nombre Contacto</label>
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control ", @id = "Nombre", @maxlength = 60 })
                </div>
                <div class="col-md-4 col-sm-4 form-group">
                    <label for="Pais" class="control-label font-weight-bold">Puesto Contacto</label>
                    @Html.TextBoxFor(model => model.Puesto, new { @class = "form-control ", @id = "Puesto", @maxlength = 60 })
                </div>
                <div class="col-md-4 col-sm-4 form-group">
                    <label for="Nombre" class="control-label font-weight-bold">Email Contacto</label>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control ", @id = "Email", @maxlength = 60 })
                </div>
            </div>
            <div class="form-group" style="text-align:right">
                <div style="margin-right:20px">
                    <button type="submit" id="btnBuscar" class="btn btn-primary">Buscar</button>
                    <button type="button" id="btnRegistrar" class="btn btn-success">Registrar</button>
                </div>
            </div>
        </form>
    </div>
    <hr />

    <div class="card card-default containerGridBuscador">
        <div class="card-header">Resultados de b&uacute;squeda</div>
        <div class="card-body">
            <div class="container-fluid">
                <!-- DATATABLE-->
                <div class="card">
                    <div class="card-body">
                        <table id="gridBuscador" width="100%" class="table table-striped table-bordered table-hover compact">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Puesto</th>
                                    <th>Email</th>
                                    <th>Telefono</th>
                                    <th>Cliente</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

